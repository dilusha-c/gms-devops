name: CI-CD Pipeline for Docker

on:
  push:
    branches:
      - main

jobs:
  backend:
    runs-on: ubuntu-latest
    outputs:
      changed: ${{ steps.backend-changes.outputs.backend }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Detect backend changes
        id: backend-changes
        uses: dorny/paths-filter@v3
        with:
          filters: |
            backend:
              - 'Backend/**'

      - name: Set up JDK 17
        if: steps.backend-changes.outputs.backend == 'true'
        uses: actions/setup-java@v4
        with:
          java-version: '17'
          distribution: 'temurin'

      - name: Login to Docker Hub
        if: steps.backend-changes.outputs.backend == 'true'
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build Backend JAR
        if: steps.backend-changes.outputs.backend == 'true'
        run: |
          cd Backend
          chmod +x mvnw
          ./mvnw clean package -DskipTests

      - name: Build Backend Docker Image
        if: steps.backend-changes.outputs.backend == 'true'
        run: |
          cd Backend
          docker build -t ${{ secrets.DOCKER_USERNAME }}/gymsync-backend:${{ github.sha }} .

      - name: Push Backend Docker Image
        if: steps.backend-changes.outputs.backend == 'true'
        run: |
          docker tag ${{ secrets.DOCKER_USERNAME }}/gymsync-backend:${{ github.sha }} ${{ secrets.DOCKER_USERNAME }}/gymsync-backend:latest
          docker push ${{ secrets.DOCKER_USERNAME }}/gymsync-backend:${{ github.sha }}
          docker push ${{ secrets.DOCKER_USERNAME }}/gymsync-backend:latest

  frontend:
    runs-on: ubuntu-latest
    outputs:
      changed: ${{ steps.frontend-changes.outputs.frontend }}

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Detect frontend changes
        id: frontend-changes
        uses: dorny/paths-filter@v3
        with:
          filters: |
            frontend:
              - 'admin/**'

      - name: Login to Docker Hub
        if: steps.frontend-changes.outputs.frontend == 'true'
        uses: docker/login-action@v3
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: Build Frontend Docker Image
        if: steps.frontend-changes.outputs.frontend == 'true'
        run: |
          cd admin
          docker build -t ${{ secrets.DOCKER_USERNAME }}/gymsync-frontend:${{ github.sha }} .

      - name: Push Frontend Docker Image
        if: steps.frontend-changes.outputs.frontend == 'true'
        run: |
          docker tag ${{ secrets.DOCKER_USERNAME }}/gymsync-frontend:${{ github.sha }} ${{ secrets.DOCKER_USERNAME }}/gymsync-frontend:latest
          docker push ${{ secrets.DOCKER_USERNAME }}/gymsync-frontend:${{ github.sha }}
          docker push ${{ secrets.DOCKER_USERNAME }}/gymsync-frontend:latest

  deploy:
    needs: [backend, frontend]
    if: needs.backend.outputs.changed == 'true' || needs.frontend.outputs.changed == 'true'
    runs-on: ubuntu-latest

    steps:
      - name: Deploy to EC2
        uses: appleboy/ssh-action@v1.0.3
        with:
          host: ${{ secrets.EC2_HOST }}
          username: ubuntu
          key: ${{ secrets.EC2_SSH_KEY }}
          script: |
            set -e
            cd ~/gymsync
            docker compose pull
            docker compose up -d
